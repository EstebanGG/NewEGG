<!-- Contact -->
<div class="container mb-5">
  <div class="container-fluid bg-grey">
    <h1 class="text-center space-t-b">Contacto</h1>
    <div class="row">
      <div class="col-sm-5">
        <p>Contáctame y te responderé dentro de las 24 horas.</p>
        <p><span class="glyphicon glyphicon-map-marker"></span> Ciudad de México, MX</p>
        <p><span class="glyphicon glyphicon-phone"></span> +52 55 24 20 17 80</p>
        <p><span class="glyphicon glyphicon-envelope"></span> esteban.gg@outook.com</p>
      </div>
      <div class="col-sm-7 slideanim">
        <form action="mailto:esteban.gg@outlook.com" method="post" enctype="text/plain">
          <div class="row">
            <div class="col-sm-6 form-group">
              <input class="form-control" id="name" name="Nombre" placeholder="Nombre" type="text" required>
            </div>
            <div class="col-sm-6 form-group">
              <input class="form-control" id="email" name="Correo" placeholder="Correo" type="email" required>
            </div>
          </div>
          <textarea class="form-control" id="comments" name="Comentarios" placeholder="Comentario" rows="5" maxlength="300" style="resize:none" required></textarea><br>
          <div class="row">
            <div class="col-sm-12 form-group">
              <p> Todos los campos son obligatorios.
              <button class="btn btn-default pull-right" type="submit">Enviar</button></p>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
